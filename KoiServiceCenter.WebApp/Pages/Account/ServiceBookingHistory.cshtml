@page "/lich-su-dat"
@model KoiServiceCenter.WebApp.Pages.Account.ServiceBookingHistoryModel


<!-- header start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Lịch sử đặt dịch vụ
        </h3>
    </div>
</div>
<!-- header end -->


@* @{
    ViewData["Title"] = "Lịch Sử Đặt Dịch Vụ";
} *@
<div class="main-content">
    <div class="table-container">
        @if (Model.ServiceHistory != null && Model.ServiceHistory.Count > 0)
        {
            <table class="table service-history-table">
                <thead>
                    <tr>
                        <th>Bác Sĩ</th>
                        <th>Email</th>
                        <th>Dịch Vụ</th>
                        <th>Ngày Hẹn</th>
                        <th>Ghi Chú</th>
                        <th>Hủy</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in Model.ServiceHistory)
                    {
                        <tr>
                            <td>@history.Veterinarian.UserName</td>
                            <td>@history.Veterinarian.Email</td>
                            <td>@history.Service.Description</td>
                            <td>@history.ServiceDate.ToString("dd/MM/yyyy")</td>
                            <td>@history.Result</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a asp-page="/Account/CancelServiceOrder" asp-route-id="@history.HistoryId" class="btn btn-sm btn-danger mx-1">
                                        <i class="bi bi-trash"></i> Hủy
                                    </a>
                                    <a asp-page="/Account/FeedBackCustomer" asp-route-id="@history.HistoryId" class="btn btn-sm btn-danger mx-1 d-flex align-items-center">
                                        <i class="bi bi-star-fill me-1"></i> 
                                        Đánh giá
                                    </a>
                                   
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-history-message">Không có lịch sử đặt dịch vụ nào cho khách hàng này.</p>
        }
    </div>
</div>

