@page
@model KoiServiceCenter.WebApp.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<h2 class="text-center mb-4" style="font-size: 2rem; font-weight: bold; color: #007bff;
    background: linear-gradient(to right, #007bff, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-top: 20px;">
    Đổi mật khẩu
</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-lg p-4 rounded-3" style="max-width: 450px; width: 100%; background-color: #f8f9fa;">
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="changePassword.OldPassword" class="form-label font-weight-bold">Mật khẩu cũ</label>
                    <input asp-for="changePassword.OldPassword" class="form-control rounded-pill" type="password" />
                    <span asp-validation-for="changePassword.OldPassword" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="changePassword.NewPassword" class="form-label font-weight-bold">Mật khẩu mới</label>
                    <input asp-for="changePassword.NewPassword" class="form-control rounded-pill" type="password" />
                    <span asp-validation-for="changePassword.NewPassword" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="changePassword.ConfirmPassword" class="form-label font-weight-bold">Xác nhận mật khẩu</label>
                    <input asp-for="changePassword.ConfirmPassword" class="form-control rounded-pill" type="password" />
                    <span asp-validation-for="changePassword.ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Cập nhật</button>
                    <a asp-page="/Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
