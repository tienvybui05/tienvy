@page "/lich-lam-viec"
@model KoiServiceCenter.WebApp.Pages.Account.Veterinarian.WorkScheduleModel
@{
}
<!-- header start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Lịch làm việc 
        </h3>
    </div>
</div>
<!-- header end -->
@{
    ViewData["Title"] = "Các lịch làm việc";
    int i = 1;
}
<div class="container py-4">

    <!-- Search Form -->
    <div class="d-flex mb-4 align-items-center justify-content-between flex-wrap shadow-sm p-3 bg-light rounded">
        <form method="get" asp-page="./Index" class="d-flex align-items-center">
            <label for="dateTime" class="me-3 fw-bold text-secondary">🔍 Tìm kiếm theo ngày:</label>
            <input type="date" name="dateTime" class="form-control me-3 border-primary" id="dateTime" style="width: auto;" />
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-search"></i> Tìm
            </button>
        </form>
    </div>

    <!-- Table -->
    <div class="table-responsive shadow rounded bg-white">
        <table class="table table-hover table-bordered text-center align-middle">
            <thead class="table-dark text-uppercase">
                <tr>
                    <th style="width: 5%;">STT</th>
                    <th style="width: 25%;">📅 @Html.DisplayNameFor(model => model.VetSchedule[0].ScheduleDate)</th>
                    <th style="width: 25%;">⏰ @Html.DisplayNameFor(model => model.VetSchedule[0].TimeSlot)</th>
                    <th style="width: 45%;">👨‍⚕️ @Html.DisplayNameFor(model => model.VetSchedule[0].Veterinarian)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.VetSchedule != null && Model.VetSchedule.Any())
                {
                    @foreach (var item in Model.VetSchedule)
                    {
                        <tr>
                            <td class="fw-bold text-secondary">@(i++)</td>
                            <td class="text-primary fw-semibold">@item.ScheduleDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-dark">@Html.DisplayFor(modelItem => item.TimeSlot)</td>
                            <td class="text-info">@Html.DisplayFor(modelItem => item.Veterinarian.UserName)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-muted text-center fst-italic">
                            <i class="bi bi-info-circle-fill text-secondary me-2"></i>
                            Không có lịch làm việc nào được tìm thấy
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
