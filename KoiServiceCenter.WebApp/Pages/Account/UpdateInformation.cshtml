@page
@model KoiServiceCenter.WebApp.Pages.Account.UpdateInformationModel
@{
}
<h4 class="text-center mb-4" style="font-weight: bold; color: #007bff; font-size: 1.5rem; letter-spacing: 1px; text-transform: uppercase;">Cập nhật thông tin cá nhân</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form method="post" class="shadow-lg p-5 rounded bg-white border">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <input type="hidden" asp-for="Customer.CustomerId" />

            <div class="form-group mb-4">
                <label asp-for="Customer.FullName" class="control-label text-secondary fw-bold">Họ và Tên</label>
                <input asp-for="Customer.FullName" class="form-control bg-light border-0 shadow-sm" placeholder="Nhập họ và tên" />
                <span asp-validation-for="Customer.FullName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Customer.PhoneNumber" class="control-label text-secondary fw-bold">Số điện thoại</label>
                <input asp-for="Customer.PhoneNumber" class="form-control bg-light border-0 shadow-sm" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Customer.Address" class="control-label text-secondary fw-bold">Địa chỉ</label>
                <input asp-for="Customer.Address" class="form-control bg-light border-0 shadow-sm" placeholder="Nhập địa chỉ" />
                <span asp-validation-for="Customer.Address" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Customer.Email" class="control-label text-secondary fw-bold">Email</label>
                <input asp-for="Customer.Email" class="form-control bg-light border-0 shadow-sm" placeholder="Nhập email" />
                <span asp-validation-for="Customer.Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Customer.User" class="control-label text-secondary fw-bold">Người dùng</label>
                <select class="form-select bg-light border-0 shadow-sm" asp-for="Customer.UserId" asp-items="ViewBag.UserId" disabled>
                    <option selected>
                        @ViewBag.SelectedUserName 
                    </option>
                </select>
                <!-- Hidden input để giữ giá trị khi submit -->
                <input type="hidden" asp-for="Customer.UserId" />
                <span asp-validation-for="Customer.User" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-5">
                <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 shadow-sm transition-link">Quay lại</a>
                <input type="submit" value="Lưu" class="btn btn-primary rounded-pill px-5 py-2 shadow-lg transition-button" />
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}