@page
@model KoiServiceCenter.WebApp.Pages.Account.UpdateInformationModel
@{
}
<h4 class="text-center mb-4" style="font-weight: bold; color: #007bff; font-size: 1.5rem; letter-spacing: 1px; text-transform: uppercase;">Cập nhật thông tin cá nhân</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden CustomerId field -->
            <input type="hidden" asp-for="Customer.CustomerId" />

            <!-- Full Name -->
            <div class="form-group">
                <label asp-for="Customer.FullName" class="control-label">Họ và tên</label>
                <input asp-for="Customer.FullName" class="form-control form-control-lg shadow-sm border-light rounded-3" placeholder="Nhập họ và tên" />
                <span asp-validation-for="Customer.FullName" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <label asp-for="Customer.PhoneNumber" class="control-label">Số điện thoại</label>
                <input asp-for="Customer.PhoneNumber" class="form-control form-control-lg shadow-sm border-light rounded-3" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label">Địa chỉ</label>
                <input asp-for="Customer.Address" class="form-control form-control-lg shadow-sm border-light rounded-3" placeholder="Nhập địa chỉ" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>

            <!-- Email (Readonly) -->
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label">Email</label>
                <input asp-for="Customer.Email" class="form-control form-control-lg shadow-sm border-light rounded-3" readonly />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>

            <!-- Submit and Return Buttons in Same Row -->
            <div class="form-group d-flex justify-content-between align-items-center text-center">
                <input type="submit" value="Lưu thông tin" class="btn btn-primary btn-md rounded-pill px-4 py-2 shadow-sm transition-all hover:scale-105" />
                <a asp-page="/Account/CustomerInformation" class="btn btn-outline-secondary btn-md rounded-pill px-4 py-2 shadow-sm transition-all hover:scale-105">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}