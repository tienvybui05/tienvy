@page
@model KoiServiceCenter.WebApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register New Account";
}
<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="container border rounded shadow-sm p-4" style="max-width: 500px;">
        <h3 class="text-center mb-4">Đăng Ký</h3>
        <form method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.UserName" class="form-label fw-bold">Tài khoản</label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label fw-bold">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label fw-bold">Mật khẩu</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-primary px-4">Đăng ký</button>
                <a asp-page="/Index" class="btn btn-secondary px-4">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
