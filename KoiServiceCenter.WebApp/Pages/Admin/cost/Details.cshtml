@page
@model KoiServiceCenter.WebApp.Pages.Admin.cost.DetailsModel

<html lang="en">
<head>
    <title>Cost Details</title>
    <style>
        .page-content {
            max-width: 600px;
            margin: auto;
            padding-top: 30px;
        }

        .title-bordered {
            background-color: black;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
            font-weight: bold;
        }

        .button-group {
            display: inline-flex;
            gap: 10px;
        }
    </style>
</head>
<body>

    <div class="page-content">
        <h4 class="title-bordered">Chi tiết chi phí</h4>
        <hr />

        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Chi phí chính</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cost.Cost1)</dd>

                    <dt class="col-sm-4">Phí bổ sung</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cost.AdditionalFees)</dd>

                    <dt class="col-sm-4">Dịch vụ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cost.Service.Description)</dd>
                </dl>
            </div>
        </div>

        <div class="button-group">
            <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Cost.CostId">Sửa</a>
            <a class="btn btn-secondary" asp-page="./Index">Quay lại</a>
        </div>
    </div>

</body>
</html>
