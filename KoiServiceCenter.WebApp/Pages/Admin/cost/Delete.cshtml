@page
@model KoiServiceCenter.WebApp.Pages.Admin.cost.DeleteModel

<html lang="en">
<head>
    <title>Delete Cost</title>
    <style>
        .page-content {
            max-width: 600px;
            margin: auto;
            padding-top: 30px;
        }

        .title-bordered {
            background-color: black;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
            font-weight: bold;
        }

        .button-group {
            display: inline-flex;
            gap: 10px;
        }

        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 1rem;
            border: 1px solid #ddd;
        }

        .card-body {
            padding: 15px;
        }

        .warning-text {
            color: red;
            font-size: small;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="page-content">
        <h4 class="title-bordered">Xác nhận xóa chi phí</h4>
        <p class="warning-text">
            Việc xóa chi phí này sẽ không thể hoàn tác. Bạn có chắc chắn muốn xóa không?
        </p>
        <hr />

        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Chi phí</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cost.Cost1)</dd>

                    <dt class="col-sm-4">Phí bổ sung</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cost.AdditionalFees)</dd>

                    <dt class="col-sm-4">Dịch vụ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cost.Service.Description)</dd>
                </dl>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Cost.CostId" />
            <div class="button-group">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-page="./Index">Quay lại danh sách</a>
            </div>
        </form>
    </div>

</body>
</html>
