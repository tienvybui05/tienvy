@page
@model KoiServiceCenter.WebApp.Pages.Admin.servicehistory.EditModel

<h4 class="mb-4 text-primary">Lịch sử Dịch vụ</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="shadow-lg p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ServiceHistory.HistoryId" />

                <div class="form-group mb-3">
                    <label asp-for="ServiceHistory.CustomerId" class="control-label text-secondary"></label>
                    <select asp-for="ServiceHistory.CustomerId" class="form-control bg-light" asp-items="ViewBag.CustomerId">
                    </select>
                    <span asp-validation-for="ServiceHistory.CustomerId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceHistory.ServiceId" class="control-label text-secondary"></label>
                    <select asp-for="ServiceHistory.ServiceId" class="form-control bg-light" asp-items="ViewBag.ServiceId">
                    </select>
                    <span asp-validation-for="ServiceHistory.ServiceId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceHistory.VeterinarianId" class="control-label text-secondary"></label>
                    <select asp-for="ServiceHistory.VeterinarianId" class="form-control bg-light" asp-items="ViewBag.VeterinarianId">
                    </select>
                    <span asp-validation-for="ServiceHistory.VeterinarianId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceHistory.ServiceDate" class="control-label text-secondary"></label>
                    <input asp-for="ServiceHistory.ServiceDate" class="form-control bg-light" type="date" />
                    <span asp-validation-for="ServiceHistory.ServiceDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceHistory.Result" class="control-label text-secondary"></label>
                    <textarea asp-for="ServiceHistory.Result" class="form-control bg-light" rows="3"></textarea>
                    <span asp-validation-for="ServiceHistory.Result" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-3 py-2 transition-link">Quay lại</a>
                    <input type="submit" value="Lưu" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm transition-button" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
