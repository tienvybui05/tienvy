@page
@model KoiServiceCenter.WebApp.Pages.Admin.servicehistory.DetailsModel

<html lang="en">
<head>
    <title>Chi tiết Lịch sử Dịch vụ</title>
    <style>
        .page-content {
            max-width: 700px;
            margin: auto;
            padding-top: 30px;
        }

        .title-bordered {
            background-color: black;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
            font-weight: bold;
        }

        .card {
            margin-bottom: 20px;
        }

        .button-group {
            display: inline-flex;
            gap: 10px;
        }
    </style>
</head>
<body>

    <div class="page-content">
        <h4 class="title-bordered">Chi tiết Lịch sử Dịch vụ</h4>
        <hr />

        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Ngày Dịch vụ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ServiceHistory.ServiceDate)</dd>

                    <dt class="col-sm-4">Khách hàng</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ServiceHistory.Customer.FullName)</dd>

                    <dt class="col-sm-4">Dịch vụ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ServiceHistory.Service.Description)</dd>

                    <dt class="col-sm-4">Bác sĩ thú y</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ServiceHistory.Veterinarian.UserName)</dd>

                    <dt class="col-sm-4">Email Bác sĩ thú y</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ServiceHistory.Veterinarian.Email)</dd>

                    <dt class="col-sm-4">Kết quả</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ServiceHistory.Result)</dd>
                </dl>
            </div>
        </div>

        <div class="button-group">
            <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>

</body>
</html>
