@model KoiServiceCenter.WebApp.Pages.Admin.vetschedule.IndexModel
@{
    ViewData["Title"] = "Các lịch làm việc";
    int i = 1;
}
<h1 class="my-4">Danh sách lịch làm của bác sĩ</h1>

<div class="d-flex mb-4 align-items-center">
    <form method="get" asp-page="./Index" class="d-flex align-items-center me-3">
        <label class="me-2 font-weight-bold">Tìm kiếm:</label>
        <input type="date" name="dateTime" class="form-control me-2" id="dateTime" style="width: auto;" />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm lịch làm việc mới
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>
                    @Html.DisplayNameFor(model => model.VetSchedule[0].ScheduleDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VetSchedule[0].TimeSlot)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VetSchedule[0].Veterinarian)
                </th>
                <th style="width: 300px;">Actions</th> <!-- Adjusted width for Actions column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.VetSchedule)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>
                        @* @Html.DisplayFor(modelItem => item.ScheduleDate) *@
                        @item.ScheduleDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeSlot)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Veterinarian.UserName)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-page="./Edit" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-warning mx-1">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-info mx-1">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-danger mx-1">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
