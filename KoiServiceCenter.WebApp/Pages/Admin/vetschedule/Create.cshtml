@page
@model KoiServiceCenter.WebApp.Pages.Admin.vetschedule.CreateModel

<h4 class="mb-4 text-primary">Lịch làm việc</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="shadow-lg p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="VetSchedule.ScheduleId" class="control-label text-secondary"></label>
                    <input asp-for="VetSchedule.ScheduleId" class="form-control bg-light" readonly />
                    <span asp-validation-for="VetSchedule.ScheduleId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="VetSchedule.VeterinarianId" class="control-label text-secondary"></label>
                    <select asp-for="VetSchedule.VeterinarianId" class="form-control bg-light" asp-items="ViewBag.VeterinarianId"></select>
                    <span asp-validation-for="VetSchedule.VeterinarianId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="VetSchedule.ScheduleDate" class="control-label text-secondary"></label>
                    <input asp-for="VetSchedule.ScheduleDate" type="date" class="form-control bg-light" />
                    <span asp-validation-for="VetSchedule.ScheduleDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="VetSchedule.TimeSlot" class="control-label text-secondary"></label>
                    <input asp-for="VetSchedule.TimeSlot" type="time" class="form-control bg-light" />
                    <span asp-validation-for="VetSchedule.TimeSlot" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-page="Index" class="btn btn-outline-secondary rounded-pill px-3 py-2 transition-link">Quay lại</a>
                    <input type="submit" value="Create Schedule" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm transition-button" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}