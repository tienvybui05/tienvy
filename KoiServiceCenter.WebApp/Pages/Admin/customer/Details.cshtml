@page
@model KoiServiceCenter.WebApp.Pages.Admin.customer.DetailsModel

<html lang="en">
<head>
    <title>Chi tiết Khách hàng</title>
    <style>
        .page-content {
            max-width: 600px;
            margin: auto;
            padding-top: 30px;
        }

        .title-bordered {
            background-color: black;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
            font-weight: bold;
        }
        .button-group {
            display: inline-flex;
            gap: 10px;
        }
    </style>
</head>
<body>

    <div class="page-content">
        <h4 class="title-bordered">Chi tiết Khách hàng</h4>
        <hr />

        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Họ và tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.FullName)</dd>

                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.PhoneNumber)</dd>

                    <dt class="col-sm-4">Địa chỉ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Address)</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Email)</dd>

                    <dt class="col-sm-4">Tài khoản</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.User.UserName)</dd>
                </dl>
            </div>
        </div>

        <div class="button-group">
            <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId">Sửa</a>
            <a class="btn btn-secondary" asp-page="./Index">Quay lại</a>
        </div>
    </div>

</body>
</html>
