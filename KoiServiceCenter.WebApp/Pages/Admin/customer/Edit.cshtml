@page
@model KoiServiceCenter.WebApp.Pages.Admin.customer.EditModel

<h4 class="mb-4 text-primary">Khách hàng</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="shadow-lg p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Customer.CustomerId" />

                <div class="form-group mb-3">
                    <label asp-for="Customer.FullName" class="control-label text-secondary"></label>
                    <input asp-for="Customer.FullName" class="form-control bg-light" />
                    <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Customer.PhoneNumber" class="control-label text-secondary"></label>
                    <input asp-for="Customer.PhoneNumber" class="form-control bg-light" />
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Customer.Address" class="control-label text-secondary"></label>
                    <input asp-for="Customer.Address" class="form-control bg-light" />
                    <span asp-validation-for="Customer.Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Customer.Email" class="control-label text-secondary"></label>
                    <input asp-for="Customer.Email" class="form-control bg-light" />
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Customer.User" class="control-label text-secondary"></label>
                    <select asp-for="Customer.UserId" class="form-control bg-light" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="Customer.User" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-3 py-2 transition-link">Quay lại</a>
                    <input type="submit" value="Lưu" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm transition-button" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
