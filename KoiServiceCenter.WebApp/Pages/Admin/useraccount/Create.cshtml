@page
@model KoiServiceCenter.WebApp.Pages.Admin.useraccount.CreateModel

<h4 class="mb-4 text-primary">Tài khoản</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="shadow-lg p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserAccount.UserId" class="control-label text-secondary"></label>
                    <input asp-for="UserAccount.UserId" class="form-control bg-light" readonly />
                    <span asp-validation-for="UserAccount.UserId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserAccount.UserName" class="control-label text-secondary"></label>
                    <input asp-for="UserAccount.UserName" class="form-control bg-light" />
                    <span asp-validation-for="UserAccount.UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserAccount.Password" class="control-label text-secondary"></label>
                    <input asp-for="UserAccount.Password" type="password" class="form-control bg-light" />
                    <span asp-validation-for="UserAccount.Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserAccount.Email" class="control-label text-secondary"></label>
                    <input asp-for="UserAccount.Email" type="email" class="form-control bg-light" />
                    <span asp-validation-for="UserAccount.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserAccount.Role" class="control-label text-secondary"></label>
                    <select asp-for="UserAccount.Role" class="form-control bg-light" asp-items="@(ViewData["Role"] as SelectList)"></select>
                    <span asp-validation-for="UserAccount.Role" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-page="Index" class="btn btn-outline-secondary rounded-pill px-3 py-2 transition-link">Quay lại</a>
                    <input type="submit" value="Tạo mới" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm transition-button" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
