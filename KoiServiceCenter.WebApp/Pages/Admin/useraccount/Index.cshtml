@page
@model KoiServiceCenter.WebApp.Pages.Admin.useraccount.IndexModel
@{
    ViewData["Title"] = "Danh sách tài khoản";
    int i = 1;
}
<h1 class="my-4">Danh sách tài khoản</h1>

<div class="d-flex mb-4 align-items-center">
    <form method="get" asp-page="./Index" class="d-flex align-items-center me-3">
        <label class="me-2 font-weight-bold">Tìm kiếm:</label>
        <input name="SearchString" class="form-control me-2" id="string" style="width: auto;" />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm tài khoản mới
    </a>
</div>


<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserAccount[0].Role)
                </th>
                <th style="width: 300px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserAccount)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-page="./Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-warning mx-1">
                                <i class="bi bi-pencil-square"></i>Sửa
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info mx-1">
                                <i class="bi bi-info-circle"></i>Chi tiết
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger mx-1">
                                <i class="bi bi-trash"></i>Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div></table>
