@{
    ViewData["Title"] = "Các lịch làm việc";
    int i = 1;
}
<h1 class="my-4">Danh sách những đánh giá của khách hàng</h1>

<div class="d-flex mb-4 align-items-center">
    <form method="get" asp-page="./Index" class="d-flex align-items-center me-3">
        <label class="me-2 font-weight-bold">Tìm kiếm:</label>
        <input name="searchString" class="form-control me-2" id="string" style="width: auto;" />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm đánh giá mới
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead class ="table-dark">
        <tr>
                <th>STT</th>
                <th>
                    @Html.DisplayNameFor(model => model.Feedback[0].Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Feedback[0].Service)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Feedback[0].Comments)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Feedback[0].Rating)
                </th>
                <th style="width: 300px;">Hành động</th> 
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Feedback) {
        <tr>
                    <td>@(i++)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
            <td>
                        <div class="d-flex justify-content-center">
                            <a asp-page="./Details" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-info mx-1">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-danger mx-1">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>