@page
@model KoiServiceCenter.WebApp.Pages.Admin.services.IndexModel
@{
    ViewData["Title"] = "Danh sách dịch vụ";
    int i = 1;
}
<h1 class="my-4">Danh sách dịch vụ</h1>

<div class="d-flex mb-4 align-items-center">
    <form method="get" asp-page="./Index" class="d-flex align-items-center me-3">
        <label class="me-2 font-weight-bold">Tìm kiếm:</label>
        <input name="SearchString" class="form-control me-2" id="string" style="width: auto;" />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm dịch vụ mới
    </a>
</div>


<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>STT</th>               
                <th>
                    @Html.DisplayNameFor(model => model.Service[0].ServiceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service[0].Price)
                </th>

                <th style="width: 300px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Service)
            {
                <tr>
                    <td>@(i++)</td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-page="./Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-warning mx-1">
                                <i class="bi bi-pencil-square"></i>Sửa
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.ServiceId" class="btn btn-sm btn-info mx-1">
                                <i class="bi bi-info-circle"></i>Chi tiết
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-danger mx-1">
                                <i class="bi bi-trash"></i>Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>