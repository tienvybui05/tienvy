@page
@model KoiServiceCenter.WebApp.Pages.Admin.services.DetailsModel

<html lang="en">
<head>
    <title>Chi tiết Dịch vụ</title>
    <style>
        .page-content {
            max-width: 700px;
            margin: auto;
            padding-top: 30px;
        }

        .title-bordered {
            background-color: black;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
            font-weight: bold;
        }

        .card {
            margin-bottom: 20px;
        }

        .button-group {
            display: inline-flex;
            gap: 10px;
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-bottom: 10px;
        }

        .btn-warning {
            background-color: #ffc107;
            color: black;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>

    <div class="page-content">
        <h4 class="title-bordered">Chi tiết Dịch vụ</h4>
        <hr />

        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Tên Dịch vụ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Service.ServiceName)</dd>

                    <dt class="col-sm-4">Mô tả</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Service.Description)</dd>

                    <dt class="col-sm-4">Giá</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Service.Price)</dd>
                </dl>
            </div>
        </div>

        <div class="button-group">
            <a asp-page="./Edit" asp-route-id="@Model.Service.ServiceId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>

</body>
</html>
