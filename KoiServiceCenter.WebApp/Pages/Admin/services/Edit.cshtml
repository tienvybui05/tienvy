@page
@model KoiServiceCenter.WebApp.Pages.Admin.services.EditModel

<h4 class="mb-4 text-primary">Dịch vụ</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="shadow-lg p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Service.ServiceId" />

                <div class="form-group mb-3">
                    <label asp-for="Service.ServiceName" class="control-label text-secondary"></label>
                    <input asp-for="Service.ServiceName" class="form-control bg-light" />
                    <span asp-validation-for="Service.ServiceName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Service.Description" class="control-label text-secondary"></label>
                    <textarea asp-for="Service.Description" class="form-control bg-light" rows="3"></textarea>
                    <span asp-validation-for="Service.Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Service.Price" class="control-label text-secondary"></label>
                    <input asp-for="Service.Price" class="form-control bg-light" type="number" step="0.01" />
                    <span asp-validation-for="Service.Price" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-3 py-2 transition-link">Quay lại</a>
                    <input type="submit" value="Lưu" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm transition-button" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
