    <!-- Cards Section -->
    <div class="row">
        <!-- Card 1: Dịch vụ -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Dịch vụ</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoDichVu</p>
                    <p class="card-text">Quản lý các dịch vụ</p>
                    <a href="/Admin/services" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card 2: VetSchedule -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Lịch làm việc bác sĩ</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoLichLam</p>
                    <p class="card-text">Quản lý lịch làm bác sĩ, chỉ định bác sĩ</p>
                    <a href="/Admin/vetschedule" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card 3: history Service -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Số dịch vụ đã đặt</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoDichVuDat</p>
                    <p class="card-text">Quản lý đơn dịch vụ do người dùng đặt</p>
                    <a href="/Admin/servicehistory" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Card 1: quan lí -->
    <div class="row">
        <!-- Card 1: Account -->
        <div class="col-md-2 mb-2">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Tài khoản</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoTaiKhoan</p>
                    <p class="card-text">Thông tin tài khoản</p>
                    <a href="/Admin/useraccount" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Nhân viên chuyển sang Bảng giá nha-->
        <div class="col-md-2 mb-2">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Bảng giá</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoBangGia</p>
                    <p class="card-text">Thông tin bảng giá</p>
                    <a href="/Admin/cost" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Khách hàng -->
        <div class="col-md-2 mb-2">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Khách hàng</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoKhachHang</p>
                    <p class="card-text">Thông tin khách hàng</p>
                    <a href="/Admin/customer" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <!-- Card 3: báo cáo -->
        <div class="col-sm-12 col-md-6 mb-60">
            <div class="card card-box text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Admin/report">Báo cáo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/feedback">Nhận xét</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Thông tin về báo cáo</h5>
                    <p class="card-text">Báo cáo về tổng dịch vụ,khách hàng và điểm đánh giá</p>
                    <a href="/Admin/report" class="btn btn-primary">Xem</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Help & Resources Section -->
    <div class="text-center mt-5">
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .card-title {
        font-size: 1.25rem;
        color: #007bff;
    }

    .card-text {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
