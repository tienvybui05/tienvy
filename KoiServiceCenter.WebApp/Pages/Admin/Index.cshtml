 @page
@model Index
@{
    ViewData["Title"] = "Admin Dashboard - Ca Koi";
}

<!-- Main Container -->
<div class="container mt-5">
    <!-- Cards  -->
    <div class="card-box pd-20 height-100-p mb-30">
        <div class="row align-items-center">
            <div class="col-md-4">
                <img src="~/Admin/vendors/images/banner-img.png" alt="">
            </div>
            <div class="col-md-8">
                <h4 class="font-20 weight-500 mb-10 text-capitalize">
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">
                            Trang quản lý dịch vụ cá Koi
                        </font>
                    </font> <div class="weight-600 font-30 text-blue"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Admin</font></font></div>
                </h4>
                <p class="font-18 max-width-600"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Thống kê sô lượng khách hàng, các đơn dịch vụ được đặt, số lượng nhân viên</font></font></p>
            </div>
        </div>
    </div>

    <!-- Cards Section -->
    <div class="row">
        <!-- Card 1: User account -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Dịch vụ</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoDichVu</p>
                    <p class="card-text">thông tin các dịch vụ</p>
                    <a href="/Admin/services" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card 2: VetSchedule -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Lịch làm việc bác sĩ</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoLichLam</p>
                    <p class="card-text">Quản lý lịch làm bác sĩ, chỉ định bác sĩ</p>
                    <a href="/Admin/vetschedule" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card 3: history Service -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Số dịch vụ đã đặt</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoDichVuDat</p>
                    <p class="card-text">Quản lý đơn dịch vụ do người dùng đặt</p>
                    <a href="/Admin/servicehistory" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Card 1: quan lí -->
    <div class="row">
        <!-- Card 1: Account -->
        <div class="col-md-2 mb-2">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Tài khoản</h5>
                    <p class="text-primary" style="font-size: 2rem;">@Model.SoTaiKhoan</p>
                    <p class="card-text">Thông tin tài khoảng</p>
                    <a href="/Admin/useraccount" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Nhân viên -->
        <div class="col-md-2 mb-2">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Nhân viên</h5>
                    <p class="text-primary" style="font-size: 2rem;">10</p>
                    <p class="card-text">Thông tin nhân viên</p>
                    <a href="/Admin/vetschedule" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Dịch vụ -->
        <div class="col-md-2 mb-2">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Khách hàng</h5>
                    <p class="text-primary" style="font-size: 2rem;">10</p>
                    <p class="card-text">Thông tin khách hàng</p>
                    <a href="/Admin/Customer" class="btn btn-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <!-- Card 3: Dịch vụ -->
        <div class="col-sm-12 col-md-6 mb-60">
            <div class="card card-box text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Admin/report">Báo cáo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/feedback">Nhận xét</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="/Admin/cost">Chưa thêm</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">Thông tin về trả về sau khi đặt dịch vụ</p>
                    <a href="/Admin/report" class="btn btn-primary">Xem</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Help & Resources Section -->
    <div class="text-center mt-5">
        <p>Learn more about <a href="https://learn.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.</p>
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .card-title {
        font-size: 1.25rem;
        color: #007bff;
    }

    .card-text {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
