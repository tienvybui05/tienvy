 @page
@model KoiServiceCenter.WebApp.Pages.Admin.report.IndexModel
@{
    ViewData["Title"] = "Các báo cáo";
    int i = 1;
}
<h1 class="my-4">Danh sách báo cáo chi tiết</h1>

<div class="d-flex mb-4 align-items-center">
    <form method="get" asp-page="./Index" class="d-flex align-items-center me-3">
        <label class="me-2 font-weight-bold">Tìm kiếm:</label>
        <input type="date" name="dateTime" class="form-control me-2" id="dateTime" style="width: auto;" />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm báo cáo mới
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>
                    @Html.DisplayNameFor(model => model.Report[0].ReportDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Report[0].TotalCustomers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Report[0].TotalServices)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Report[0].AverageRating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Report[0].Notes)
                </th>
                <th style="width: 300px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Report)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>
                        @item.ReportDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCustomers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalServices)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AverageRating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-page="./Edit" asp-route-id="@item.ReportId" class="btn btn-sm btn-warning mx-1">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.ReportId" class="btn btn-sm btn-info mx-1">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.ReportId" class="btn btn-sm btn-danger mx-1">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>