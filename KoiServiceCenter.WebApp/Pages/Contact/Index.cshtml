                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="col-md-6">

                                <div class="form-floating">

                                    <select asp-for="ServiceHistory.CustomerId" class="form-control bg-white border-0"
                                            asp-items="ViewBag.CustomerId"></select>
                                    <label asp-for="ServiceHistory.CustomerId" class="control-label">Customer</label>
                                </div>

                            </div>
                            <input asp-for="ServiceHistory.HistoryId" type="hidden" />

                            <div class="col-md-6">
