                                    <select asp-for="ServiceHistory.VeterinarianId"
                                            class="form-control bg-white border-0"
                                            asp-items="ViewBag.VeterinarianId"></select>
                                    <label asp-for="ServiceHistory.VeterinarianId" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="ServiceHistory.Result" class="form-control bg-white border-0" />
                                    <label asp-for="ServiceHistory.Result" class="control-label"></label>
                                    <span asp-validation-for="ServiceHistory.Result" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <input type="submit" value="Book Now" class="btn btn-primary text-white w-100 py-3" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
